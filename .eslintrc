{
  "extends": ["dgeibi/react"],
  "rules": {
    "import/no-extraneous-dependencies": "off",
    "no-script-url": "off"
  },
  "overrides": [
    {
      "files": [
        "**/*.spec.js",
        "**/*.spec.jsx",
        "**/*.test.js",
        "**/*.test.jsx",
        "**/__tests__/**/*.js",
        "**/__tests__/**/*.jsx"
      ],
      "env": {
        "jest": true
      },
      "globals": {
        "shallow": false,
        "render": false,
        "mount": false,
        "sleep": false
      }
    }
  ]
}
